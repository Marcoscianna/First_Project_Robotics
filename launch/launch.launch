<launch>
    <param name="lat_zero" value="0.0"/>
    <param name="lon_zero" value="0.0"/>
    <param name="alt_zero" value="0.0"/>

    <node pkg="rviz" name="rviz" type="rviz" args="-d $(find first_project)/rviz_config.rviz"/>

    <node pkg="first_project" name="gps_to_odom" type="gps_to_odom" output="screen"/>

    <!-- <node pkg="tf" type="static_transform_publisher" name="odom_to_tf" args="0 0 0 0 0 0 /map /odom 100" />-->

    <!-- Parametri per il nodo odom_to_tf_encoder -->
    <param name="root_frame" value="world"/>
    <param name="child_frame" value="wheel_odom"/>

    <!-- Nodo odom_to_tf per l'odometria dagli encoder -->
    <node pkg="first_project" name="odom_to_tf_encoder" type="odom_to_tf" output="screen">
        <remap from="input_odom" to="/odom"/>            <!-- rimappo l'input -->
    </node>

    <!-- Parametri per il nodo odom_to_tf_gps -->  
    <param name="root_frame" value="world"/>
    <param name="child_frame" value="gps_odom"/>

    <!-- Nodo odom_to_tf per l'odometria dal GPS -->
    <node pkg="first_project" name="odom_to_tf_gps" type="odom_to_tf" output="screen">
        <remap from="input_odom" to="/gps_odom"/>              <!-- rimappo l'input -->
    </node>
</launch>
